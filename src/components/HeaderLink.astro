---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a href={href} class:list={[className, { 'font-semibold pointer-events-none border-b-2 border-gray-700 dark:border-gray-300 text-gray-700': isActive }, { 'relative group font-semibold text-stroke-white text-lg': true }, { 'text-gray-700 hover:text-slate-900 hover:font-semibold': !isActive } ]} {...props}>
  {
    !isActive && (
      <span class="absolute w-0 h-0 transition-all duration-300 border-b-2 border-gray-700 dark:border-gray-300 group-hover:w-full ease bottom-0 left-0" />
    )
  }
	<slot />
</a>
