---
import { Icon } from 'astro-icon/components'

interface Props {
  icon?: string
}

const { icon } = Astro.props;
---

<div class="rounded-full p-1 bg-white">
  <span
    class=" rounded-full h-14 w-14 flex items-center justify-center bg-white border-2 border-slate-700"
  >
    { icon && <Icon name={icon} class="w-12" /> }
  </span>
</div>