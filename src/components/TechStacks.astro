      { name: 'Jest', icon: 'logos:jest' },
      { name: 'ESLint', icon: 'logos:eslint' },
      { name: 'Prettier', icon: 'logos:prettier' },
    ]
  },
  {
    title: 'Server & Deployments',
    lists: [
      { name: 'AWS', icon: 'logos:aws' },
      { name: 'Railway', icon: '' },
      { name: 'Firebase', icon: 'logos:firebase' },
      { name: 'Vercel', icon: 'logos:vercel-icon' },
      { name: 'Heroku', icon: 'logos:heroku-icon' },
    ]
  },
  {
    title: 'Package Managers',
    lists: [
      { name: 'npm', icon: 'logos:npm' },
      { name: 'pnpm', icon: 'pnpm' },
      { name: 'yarn', icon: 'logos:yarn' },
      { name: 'gem', icon: 'logos:rubygems' },
