---
import { Icon } from 'astro-icon'

interface Props {
  icon?: string
}

const { icon } = Astro.props;
---

<span class=" px-4 py-2 flex items-center w-max rounded-md border-gray-700 text-gray-700 bg-white border-2 text-sm md:text-base font-medium">
  { icon && <Icon name={icon} class="mr-2 h-5 max-w-20" /> }
  <slot />
</span>