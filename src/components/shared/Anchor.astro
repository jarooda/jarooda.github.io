---
import AnimatedButton from "./AnimatedButton.astro"

interface Props {
  href: string
  rel?: string
  target?: string
  icon?: string
  block?: boolean
  test?: string
  dataCollection?: string
  class?: string
  download?: boolean
}

const {
  href,
  rel,
  target,
  icon,
  block,
  test,
  dataCollection,
  class: className,
  download
} = Astro.props
---

<AnimatedButton
  href={href}
  rel={rel}
  target={target}
  iconName={icon}
  block={block}
  dataTest={test}
  dataCollection={dataCollection}
  class={className}
  download={download}
  as="a"
>
  <slot />
</AnimatedButton>
