---
import AnimatedButton from './AnimatedButton.astro'

interface Props {
  href: string
  rel?: string
  target?: string
  icon?: string
  block?: boolean
  isContrast?: boolean
  test?: string
  dataCollection?: string
  class?: string
}

const { href, rel, target, icon, block, isContrast, test, dataCollection, class: className } = Astro.props;
---

<AnimatedButton
  href={href}
  rel={rel}
  target={target}
  iconName={icon}
  block={block}
  dataTest={test}
  dataCollection={dataCollection}
  class={className}
  as="a"
>
  <slot />
</AnimatedButton>