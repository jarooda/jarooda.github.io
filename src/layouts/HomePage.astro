---
import Header from '../components/shared/Header.astro';
import Hero from "../components/HomepageHero.astro"
import TechStacks from "../components/HomepageTechStacks.astro"
import Projects from "../components/HomepageProjects.astro"
import Blogs from "../components/HomepageBlogs.astro"
import ContactMe from "../components/HomepageContactMe.astro"
import Footer from "../components/shared/Footer.astro"
---

<script src="../utils/home-animation.ts"></script>

<main class="font-inter mx-auto w-full text-gray-700 dark:text-gray-300 bg-gray-200 dark:bg-gray-900 transition-colors duration-200">
  <astro-home-animation>
    <Header hasSeparator={ true } />
    <Hero />
    <Blogs />
    <Projects />
    <TechStacks />
    <ContactMe />
    <Footer />
  </astro-home-animation>
</main>
