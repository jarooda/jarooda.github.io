---
import { ClientRouter } from "astro:transitions"
import BaseHead from '../components/shared/BaseHead.astro';
import Header from '../components/shared/Header.astro';
import Footer from '../components/shared/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/base.css';

const title = '404 | ' + SITE_TITLE + ' - Frontend Developer'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={ title } description={SITE_DESCRIPTION} />
    <ClientRouter />
	</head>
	<body class="bg-white dark:bg-gray-900 font-inter transition-colors duration-200">
    <Header />
    <main class=" w-screen h-[calc(100vh-104px)] md:h-[calc(100vh-80px)] flex justify-center items-center">
      <h1 class="text-3xl md:text-6xl text-black dark:text-white">404 - Not Found</h1>
    </main>
    <Footer />
	</body>
</html>
