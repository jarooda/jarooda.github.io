---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FlickingComponent from '../components/FlickingComponent.astro';
import ProjectsCard from '../components/ProjectsCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import '../styles/index.css';

const posts = (await getCollection('project')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const title = `Projects - ${ SITE_TITLE }`

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={ title } description={ SITE_DESCRIPTION } />
	</head>
	<body class=" font-inter">
		<Header />
    <main class=" bg-gray-200">
			<section class=" mx-auto w-full lg:w-224 p-4 min-h-screen">
        <FlickingComponent>
          {
            posts.map((post) => (
              <ProjectsCard { ...post.data } render={ post.render } />
            ))
          }
        </FlickingComponent>
			</section>
		</main>
		<Footer />
	</body>
</html>
