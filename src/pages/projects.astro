---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ProjectsCard from '../components/ProjectsCard.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import '../styles/index.css';

const posts = (await getCollection('project')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const leftMasonry = posts.filter((_, i) => i % 2 === 0);
const rightMasonry = posts.filter((_, i) => i % 2 === 1);

const title = `Projects - ${ SITE_TITLE }`
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={ title } description={ SITE_DESCRIPTION } />
	</head>
	<body class=" font-inter">
		<Header />
		<main class=" text-gray-700 bg-gray-200">
      <div class="mx-auto w-full lg:w-224 p-4 grid grid-cols-1 lg:grid-cols-2 gap-4">
        <div class="mx-auto flex flex-col gap-4">
          {
            leftMasonry.map((post) => (
              <ProjectsCard { ...post.data } render={ post.render } />
            ))
          }
        </div>
        <div class="mx-auto flex flex-col gap-4">
          {
            rightMasonry.map((post) => (
              <ProjectsCard { ...post.data } render={ post.render } />
            ))
          }
        </div>
      </div>
		</main>
		<Footer />
	</body>
</html>
